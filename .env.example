# ==============================================
# Noteum Environment Configuration Template
# ==============================================
# Copy this file to .env.development for development
# and .env.production for production deployment

# ----------------------------------------------
# Application Configuration
# ----------------------------------------------
NODE_ENV=development
PORT=3001
WEB_PORT=3000

# ----------------------------------------------
# Database Configuration (PostgreSQL)
# ----------------------------------------------
# Database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=noteum_dev
DB_USERNAME=noteum_user
DB_PASSWORD=your_secure_password

# Database URL for connection pools and ORMs
DATABASE_URL=postgresql://noteum_user:your_secure_password@localhost:5432/noteum_dev

# Vector database settings (pgvector extension)
PGVECTOR_ENABLED=true
VECTOR_DIMENSION=1536

# ----------------------------------------------
# Authentication (Logto Configuration)
# ----------------------------------------------
# Logto service endpoint
LOGTO_ENDPOINT=https://your-logto-instance.logto.app
LOGTO_APP_ID=your_logto_app_id
LOGTO_APP_SECRET=your_logto_app_secret

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_secure
JWT_EXPIRE_TIME=24h
JWT_REFRESH_EXPIRE_TIME=7d

# ----------------------------------------------
# CORS and Security Configuration
# ----------------------------------------------
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security settings
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ----------------------------------------------
# Logging Configuration
# ----------------------------------------------
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log

# ----------------------------------------------
# External Services
# ----------------------------------------------
# AI/ML services for vector embeddings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=text-embedding-3-small

# File storage configuration
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760

# ----------------------------------------------
# Redis Configuration (Optional - for caching)
# ----------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ----------------------------------------------
# Development/Debug Settings
# ----------------------------------------------
DEBUG_MODE=false
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
TYPEORM_LOGGING=false

# ----------------------------------------------
# Email Configuration (Optional)
# ----------------------------------------------
SMTP_HOST=your_smtp_server
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@noteum.app

# ----------------------------------------------
# Monitoring & Analytics (Optional)
# ----------------------------------------------
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=false

# ----------------------------------------------
# Feature Flags
# ----------------------------------------------
FEATURE_AI_SUGGESTIONS=true
FEATURE_COLLABORATION=true
FEATURE_EXPORT_IMPORT=true
FEATURE_DESKTOP_SYNC=true