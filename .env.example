# 应用配置
NODE_ENV=development
PORT=9168
NESTJS_PORT=9168

# 前端配置
FRONTEND_PORT=9158
VITE_API_URL=http://localhost:9168
VITE_WS_URL=ws://localhost:9168

# 数据库配置
DATABASE_HOST=localhost
DATABASE_PORT=9198
DATABASE_URL=postgresql://postgres:postgres_dev@localhost:9198/noteum_dev
DATABASE_NAME=noteum_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres_dev
DATABASE_SSL=false

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=9178
REDIS_URL=redis://localhost:9178
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# tRPC 配置
TRPC_SERVER_URL=http://localhost:9168/trpc
TRPC_SERVER_PORT=9168

# CORS 配置
CORS_ORIGIN=http://localhost:9158

# PgAdmin 配置
PGADMIN_PORT=9188
PGADMIN_DEFAULT_EMAIL=admin@noteum.dev
PGADMIN_DEFAULT_PASSWORD=admin123

# 文件上传配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# OpenAI 配置 (用于 embedding)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=text-embedding-ada-002

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=json

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9464

# 健康检查配置
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 向量搜索配置
VECTOR_SIMILARITY_THRESHOLD=0.7
VECTOR_SEARCH_LIMIT=10
VECTOR_DIMENSION=1536

# 邮件配置 (可选)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 开发工具配置
SWAGGER_ENABLED=true
DEBUG_MODE=true

# 生产环境专用配置
GRAFANA_PASSWORD=admin123
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Docker 配置
COMPOSE_PROJECT_NAME=noteum
COMPOSE_FILE=docker-compose.dev.yml