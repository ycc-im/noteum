{
  "name": "@noteum/client",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "gen:route": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles/output.css && @tanstack/router-cli generate",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build-debug": "tauri build --debug",
    "tauri:test": "cargo test --manifest-path src-tauri/Cargo.toml",
    "tauri:test:watch": "cargo test --manifest-path src-tauri/Cargo.toml -- --watch",
    "tauri:test:unit": "cargo test --manifest-path src-tauri/Cargo.toml -- --lib",
    "tauri:test:integration": "cargo test --manifest-path src-tauri/Cargo.toml -- --test '*'"
  },
  "dependencies": {
    "@hocuspocus/provider": "^2.0.0",
    "@noteum/utils": "workspace:*",
    "@tanstack/react-router": "^1.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "tailwind-merge": "^2.0.0",
    "y-websocket": "^1.5.0",
    "yjs": "^13.6.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@tanstack/router-cli": "^1.133.10",
    "@tauri-apps/api": "^1.5.0",
    "@tauri-apps/cli": "^1.5.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}