{
  "name": "noteum",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "AI-powered note-taking application with local-first storage",
  "scripts": {
    "dev": "vite dev --port 3000",
    "dev:tauri": "tauri dev",
    "build": "vite build",
    "build:tauri": "tauri build",
    "serve": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:vitest": "vitest run",
    "test:vitest:watch": "vitest",
    "test:vitest:coverage": "vitest run --coverage",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "test:tdd": "jest --watchAll --no-cache --verbose",
    "test:unit": "jest --testPathIgnorePatterns=src/test/e2e",
    "test:integration": "jest --testNamePattern='integration'",
    "test:performance": "jest --testPathPattern=src/test/performance",
    "test:component": "jest --testPathPattern=src/components",
    "test:service": "jest --testPathPattern=src/services",
    "test:hook": "jest --testPathPattern=src/hooks",
    "test:util": "jest --testPathPattern=src/utils",
    "test:changed": "jest --onlyChanged",
    "test:related": "jest --changedSince=main",
    "test:silent": "jest --silent",
    "test:debug": "jest --detectOpenHandles --forceExit --verbose",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src",
    "check": "prettier --write . && eslint --fix src",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "tauri": "tauri"
  },
  "keywords": [
    "ai",
    "notes",
    "react",
    "tauri",
    "local-first",
    "indexeddb"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@logto/react": "^4.0.9",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.2.2",
    "@tanstack/react-router": "^1.130.2",
    "@tanstack/react-router-devtools": "^1.131.5",
    "@tanstack/router-plugin": "^1.121.2",
    "@tauri-apps/api": "^2.4.0",
    "chrono": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^3.2.0",
    "lucide-react": "^0.544.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reactflow": "^11.11.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.6",
    "ulid": "^3.0.1",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^3.22.0",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/addon-viewport": "^8.6.14",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@tanstack/eslint-config": "^0.3.0",
    "@tauri-apps/cli": "^2.4.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "fake-indexeddb": "^6.2.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "storybook": "^8.4.7",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.7.2",
    "vite": "^6.3.5",
    "vitest": "^3.0.5",
    "web-vitals": "^4.2.4"
  },
  "pnpm": {
    "overrides": {
      "tmp": ">=0.2.4"
    }
  }
}
