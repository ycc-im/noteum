{
  "name": "@noteum/shared",
  "version": "1.0.0",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "proto:generate": "grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --js_out=import_style=commonjs,binary:./src/types --grpc_out=grpc_js:./src/types --ts_out=./src/types --proto_path=./src/proto ./src/proto/*.proto",
    "proto:clean": "rm -rf ./src/types/*.js ./src/types/*.d.ts",
    "proto:build": "npm run proto:clean && npm run proto:generate",
    "build": "npm run proto:build"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.9",
    "google-protobuf": "^3.21.0",
    "ulid": "^3.0.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.0",
    "@types/jest": "^29.5.2",
    "grpc-tools": "^1.12.0",
    "grpc_tools_node_protoc_ts": "^5.3.0",
    "jest": "^29.5.0",
    "protoc-gen-ts": "^0.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ]
  }
}
