{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Noteum",
  "version": "1.0.0",
  "identifier": "com.noteum.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Noteum - AI-Powered Notes",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost ws://localhost:* http://localhost:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "identifier": "com.noteum.app",
    "publisher": "Noteum Team",
    "category": "Productivity"
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": [
          "$APPDATA/noteum/*",
          "$APPDATA/noteum/**/*",
          "$APPDATA/**/*",
          "$HOME/.noteum/*",
          "$HOME/.noteum/**/*"
        ],
        "deny": []
      }
    }
  }
}
