{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Noteum",
  "version": "1.0.0",
  "identifier": "com.noteum.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "Noteum",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "all": true,
      "readFile": true,
      "writeFile": true,
      "readDir": true,
      "createDir": true,
      "removeFile": true,
      "removeDir": true,
      "exists": true
    },
    "shell": {
      "all": false,
      "open": true
    },
    "dialog": {
      "all": false,
      "open": true,
      "save": true
    },
    "window": {
      "all": false,
      "close": true,
      "hide": true,
      "show": true,
      "maximize": true,
      "minimize": true,
      "unmaximize": true,
      "unminimize": true,
      "startDragging": true
    }
  }
}